# Tilt Configuration for Everything Monorepo
# Copy this file to .env and customize for your local environment

# =============================================================================
# Global Settings
# =============================================================================

# Enable/disable entire domains
TILT_ENABLE_DEMO=true
TILT_ENABLE_MANMAN=false

# =============================================================================
# Demo Apps Configuration
# =============================================================================

# Enable/disable individual demo apps
DEMO_ENABLE_FASTAPI=true
DEMO_ENABLE_INTERNAL_API=false
DEMO_ENABLE_WORKER=false
DEMO_ENABLE_HELLO_PYTHON=false
DEMO_ENABLE_HELLO_GO=false
DEMO_ENABLE_JOB=false

# Infrastructure
DEMO_ENABLE_INGRESS=true

# =============================================================================
# Manman Configuration (if enabled)
# =============================================================================

# See manman/Tiltfile for complete manman configuration options
# Or refer to the existing manman/.env for database, rabbitmq, etc.

# Quick manman toggles (uncomment to override)
# MANMAN_ENABLE_EXPERIENCE_API=true
# MANMAN_ENABLE_WORKER_DAL_API=true
# MANMAN_ENABLE_STATUS_API=true
# MANMAN_ENABLE_OTEL_LOGGING=true

# Database configuration
# MANMAN_BUILD_POSTGRES_ENV=default  # or 'custom'
# MANMAN_POSTGRES_URL=postgresql+psycopg2://postgres:password@localhost:5432/manman

# RabbitMQ configuration  
# MANMAN_BUILD_RABBITMQ_ENV=default  # or 'custom'
# MANMAN_RABBITMQ_HOST=localhost
# MANMAN_RABBITMQ_PORT=5672
# MANMAN_RABBITMQ_USER=rabbit
# MANMAN_RABBITMQ_PASSWORD=password

# =============================================================================
# Development Notes
# =============================================================================
#
# This monorepo supports multiple development patterns:
#
# 1. Full stack development (manman + demo):
#    TILT_ENABLE_DEMO=true
#    TILT_ENABLE_MANMAN=true
#
# 2. Single app development (just one demo app):
#    TILT_ENABLE_DEMO=true
#    DEMO_ENABLE_FASTAPI=true
#    DEMO_ENABLE_INTERNAL_API=false
#    DEMO_ENABLE_WORKER=false
#
# 3. Manman-only development:
#    TILT_ENABLE_DEMO=false
#    TILT_ENABLE_MANMAN=true
#
# Remember to build the helm charts first:
#   bazel build //demo:fastapi_chart
#   bazel build //demo:internal_api_chart
#   bazel build //demo:worker_chart
#   bazel build //demo:job_chart
#
# Or build all at once:
#   bazel build //demo/...
