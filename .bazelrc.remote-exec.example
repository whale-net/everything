# BuildBuddy Remote Execution Configuration
# To enable: rename this file to .bazelrc.remote-exec and add to .bazelrc:
# try-import %workspace%/.bazelrc.remote-exec

# BuildBuddy remote execution (free tier available)
build --remote_executor=grpcs://remote.buildbuddy.io
build --remote_cache=grpcs://remote.buildbuddy.io
build --remote_upload_local_results=true
build --remote_download_minimal

# Authentication (set BUILDBUDDY_API_KEY environment variable)
build --remote_header=x-buildbuddy-api-key

# Instance configuration
build --remote_instance_name=buildbuddy-io/buildbuddy/default_instance_name

# Optimization settings for remote execution
build --experimental_remote_merkle_tree_cache=true
build --jobs=50  # Higher parallelism with remote execution
build --loading_phase_threads=20
build --experimental_remote_execution_keepalive=true

# CI-specific remote execution settings
build:ci --remote_timeout=600s  # 10 minutes timeout for large builds
build:ci --experimental_remote_cache_compression_threshold=0  # Always compress for bandwidth