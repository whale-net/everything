# Tools and shared build rules for the monorepo

package(default_visibility = ["//visibility:public"])

exports_files([
    "oci.bzl",
])

# Convenient alias for release helper
# This tool is optimized for caching and pre-built in CI workflows
# Use --config=tools for faster builds: bazel build --config=tools //tools:release
alias(
    name = "release",
    actual = "//tools/release_helper:release_helper",
    visibility = ["//visibility:public"],
)
