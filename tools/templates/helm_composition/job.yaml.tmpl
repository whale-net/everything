{{/*
Migration jobs template - Generated from k8s artifacts
Sorted by hook weight for proper execution order
*/}}
{{- range .Artifacts }}
{{- if eq .Type "job" }}
---
apiVersion: batch/v1
kind: Job
metadata:
  name: {{ $.Release.Name }}-{{ .Name }}
  labels:
    app: {{ .Name }}
    chart: {{ $.Chart.Name }}
    release: {{ $.Release.Name }}
    heritage: {{ $.Release.Service }}
  annotations:
    "helm.sh/hook": pre-install,pre-upgrade
    "helm.sh/hook-weight": "{{ .HookWeight | default -5 }}"
    "helm.sh/hook-delete-policy": "{{ .HookDeletePolicy | default "before-hook-creation" }}"
spec:
  template:
    metadata:
      name: {{ $.Release.Name }}-{{ .Name }}
      labels:
        app: {{ .Name }}
        release: {{ $.Release.Name }}
    spec:
      containers:
      - name: {{ .Name }}
        {{- if eq .Name "migrations_job" }}
        {{- $firstApp := index $.Apps 0 }}
        image: "{{ $firstApp.Registry }}/whale-net/{{ $firstApp.RepoName }}:{{ $firstApp.Version }}"
        command: ["python", "-m", "alembic", "upgrade", "head"]
        {{- else }}
        {{- $firstApp := index $.Apps 0 }}
        image: "{{ $firstApp.Registry }}/whale-net/{{ $firstApp.RepoName }}:{{ $firstApp.Version }}"
        command: ["echo", "Job {{ .Name }} executed"]
        {{- end }}
        env:
        - name: JOB_NAME
          value: {{ .Name }}
        resources:
          requests:
            memory: "256Mi"
            cpu: "200m"
          limits:
            memory: "512Mi"
            cpu: "500m"
      restartPolicy: OnFailure
      backoffLimit: 3
{{- end }}
{{- end }}