{{- if .Values.ingress.enabled -}}
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: {{ .Chart.Name }}-{{ .Values.global.environment }}-ingress
  namespace: {{ .Values.global.namespace }}
  labels:
    app: {{ .Chart.Name }}-{{ .Values.global.environment }}
  {{- with .Values.ingress.annotations }}
  annotations:
    {{- toYaml . | nindent 4 }}
  {{- end }}
spec:
  {{- if .Values.ingress.className }}
  ingressClassName: {{ .Values.ingress.className }}
  {{- end }}
  {{- if .Values.ingress.tls }}
  tls:
    {{- range .Values.ingress.tls }}
    - secretName: {{ .secretName }}
      {{- if .hosts }}
      hosts:
        {{- range .hosts }}
        - {{ . | quote }}
        {{- end }}
      {{- end }}
    {{- end }}
  {{- end }}
  rules:
    {{- range .Values.ingress.hosts }}
    - host: {{ .host | quote }}
      http:
        paths:
          {{- range .paths }}
          - path: {{ .path }}
            {{- if .pathType }}
            pathType: {{ .pathType }}
            {{- end }}
            backend:
              service:
                {{- if .service }}
                name: {{ .service.name }}
                port:
                  {{- if .service.port.name }}
                  name: {{ .service.port.name }}
                  {{- else }}
                  number: {{ .service.port.number }}
                  {{- end }}
                {{- else }}
                {{- /* Default to the first app's service */ -}}
                {{- $appName := (keys $.Values.apps | first) }}
                {{- $app := index $.Values.apps $appName }}
                name: {{ $appName }}-{{ $.Values.global.environment }}-service
                port:
                  number: {{ $app.port | default 8000 }}
                {{- end }}
          {{- end }}
    {{- end }}
{{- end }}
