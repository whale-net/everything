# ManMan Local Development Environment Variables
# Copy this file to .env and fill in your values

# ===========================
# OIDC Configuration (Management UI)
# ===========================

# Authentication mode: 'none' (development) or 'oidc' (production)
# Defaults to 'none' if not set - no authentication required for local development
# Set to 'oidc' to enable OpenID Connect authentication
MANAGEMENT_UI_AUTH_MODE=none

# OIDC Issuer URL (e.g., Keycloak realm URL) - required when MANAGEMENT_UI_AUTH_MODE=oidc
# Example: https://keycloak.example.com/realms/myrealm
OIDC_ISSUER=

# OIDC Client ID (registered in your identity provider) - required when MANAGEMENT_UI_AUTH_MODE=oidc
OIDC_CLIENT_ID=management-ui

# OIDC Client Secret (from your identity provider) - required when MANAGEMENT_UI_AUTH_MODE=oidc
OIDC_CLIENT_SECRET=

# OIDC Redirect URI (where users return after authentication)
# For local development with Tilt (default):
OIDC_REDIRECT_URI=http://management-ui.manman.local:30080/auth/callback

# Session secret key (change in production)
SECRET_KEY=dev-secret-key-change-in-production

# Experience API URL (defaults to remote dev API if not set)
# EXPERIENCE_API_URL=https://dev-experience-api.manman.whalenet.dev

# ===========================
# Optional: Custom Infrastructure
# ===========================

# Use custom PostgreSQL instead of local instance
# BUILD_POSTGRES_ENV=custom
# POSTGRES_URL=postgresql://user:pass@host:5432/manman

# Use custom RabbitMQ instead of local instance
# BUILD_RABBITMQ_ENV=custom
# RABBITMQ_HOST=localhost
# RABBITMQ_PORT=5672
# RABBITMQ_USER=guest
# RABBITMQ_PASSWORD=guest

# ===========================
# Optional: App Enablement
# ===========================

# Control which apps are enabled in Tilt
# ENABLE_EXPERIENCE_API=true
# ENABLE_WORKER_DAL_API=true
# ENABLE_STATUS_API=true
# ENABLE_STATUS_PROCESSOR=true
# ENABLE_MANAGEMENT_UI=true
# ENABLE_MIGRATION=true
