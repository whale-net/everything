load("@rules_python//python:defs.bzl", "py_library", "py_test")

# Core manman library with configuration, models, and utilities
py_library(
    name = "manman_core",
    srcs = [
        "__init__.py",
        "__main__.py",
        "config.py",
        "conftest.py",
        "constants.py",
        "exceptions.py",
        "models.py",
        "runner.py",
        "util.py",
    ],
    visibility = [
        "//libs/python/openapi_gen:__pkg__",
        "//manman:__subpackages__",
    ],
    deps = [
        "//libs/python/rmq",
        "@pypi//:alembic",
        "@pypi//:amqpstorm",
        "@pypi//:asyncpg",
        "@pypi//:fastapi",
        "@pypi//:opentelemetry-api",
        "@pypi//:opentelemetry-sdk",
        "@pypi//:psycopg2-binary",
        "@pypi//:pydantic",
        "@pypi//:pytest",
        "@pypi//:pytest-asyncio",
        "@pypi//:python-dotenv",
        "@pypi//:sqlmodel",
        "@pypi//:typer",
    ],
)

# Individual test targets for better granularity
py_test(
    name = "config_test",
    size = "small",
    srcs = [
        "config_test.py",
        "conftest.py",
        "runner.py",
    ],
    main = "runner.py",
    deps = [
        ":manman_core",
        "@pypi//:pytest",
        "@pypi//:pytest-asyncio",
    ],
)

py_test(
