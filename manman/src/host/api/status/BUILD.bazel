load("@rules_python//python:defs.bzl", "py_binary", "py_library", "py_test")

# Status API library
py_library(
    name = "status_api_lib",
    srcs = [
        "__init__.py",
        "api.py",
    ],
    visibility = ["//manman/src/host:__pkg__"],
    deps = [
        "//manman/src:manman_core",
        "//manman/src/host/api:api_shared",
        "//manman/src/repository:manman_repository",
        "@pypi//:fastapi",
        "@pypi//:opentelemetry-instrumentation-fastapi",
        "@pypi//:pydantic",
        "@pypi//:uvicorn",
    ],
)

# Status API binary
py_binary(
    name = "status_api",
    srcs = ["//manman/src/host:main.py"],
    args = ["start-status-api"],
    main = "//manman/src/host:main.py",
    visibility = [
        "//manman:__pkg__",
        "//manman/src/host:__pkg__",
    ],
    deps = [
        ":status_api_lib",
        "//manman/src/host:host_main",
    ],
)

# Status API tests
py_test(
    name = "status_api_test",
    size = "small",
    srcs = ["//manman/src/host:status_api_test.py"],
    main = "//manman/src/host:status_api_test.py",
    deps = [
        ":status_api_lib",
        "//manman/src/host:host_main",
        "@pypi//:httpx",
        "@pypi//:pytest",
        "@pypi//:pytest-asyncio",
    ],
)
