load("@rules_go//go:def.bzl", "go_binary", "go_library")
load("//tools/bazel:release.bzl", "release_app")

go_library(
    name = "log-processor_lib",
    srcs = [
        "main.go",
        "config.go",
    ],
    importpath = "github.com/whale-net/everything/manman/log-processor",
    visibility = ["//visibility:private"],
    deps = [
        "//libs/go/rmq",
        "//libs/go/s3",
        "//manman/api/repository/postgres",
        "//manman/log-processor/archiver",
        "//manman/log-processor/consumer",
        "//manman/log-processor/lifecycle",
        "//manman/log-processor/server",
        "//manman/protos:manmanpb",
        "@com_github_jackc_pgx_v5//pgxpool",
        "@org_golang_google_grpc//:grpc",
        "@org_golang_google_grpc//credentials/insecure",
    ],
)

go_binary(
    name = "log-processor",
    embed = [":log-processor_lib"],
    visibility = ["//visibility:public"],
)

# Release metadata for log-processor
release_app(
    name = "log-processor",
    app_type = "internal-api",
    binary_name = ":log-processor",
    description = "Real-time log streaming and S3 archival service with gRPC API",
    domain = "manmanv2",
    language = "go",
    port = 50053,
    replicas = 1,
)
